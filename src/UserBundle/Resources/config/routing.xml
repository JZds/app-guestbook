<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="app_user.login" path="/login">
        <default key="_controller">app_user.controller.user_controller:login</default>
    </route>
    <route id="app_user.logout" path="/logout">
        <default key="_controller">app_user.controller.user_controller:logout</default>
    </route>
    <route id="app_user.register" path="/register">
        <default key="_controller">app_user.controller.user_controller:register</default>
    </route>
</routes>
